---
import { ViewTransitions } from 'astro:transitions';
import '@fontsource-variable/work-sans';
import '@fontsource/kalam';
import SiteFooter from '../components/SiteFooter.astro';
import AnimatedTitle from '../components/AnimatedTitle.astro';
import ArrowLeft from '../../public/arrow-left.svg?raw';

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.title}</title>
    <!-- <ViewTransitions /> -->
  </head>
  <body>
    <div class="site-container shadow-2xl">
      <div class="w-full max-w-xl mx-auto p-5">
        <a
          href="/"
          class="back-link px-5 py-3 inline-flex items-center jusity-center gap-2"
        >
          <span class="w-5 inline-block back-link-arrow overflow-hidden">
            <Fragment set:html={ArrowLeft} />
          </span>
          <span class="inline-block">Back</span>
        </a>
        <div class="mt-10">
          <AnimatedTitle text={frontmatter.title} />
        </div>
        <slot />
      </div>
    </div>
    <SiteFooter />
  </body>
</html>
<style is:global lang="scss">
  body {
    background-color: #2b2d42;
  }

  .site-container {
    margin-bottom: 500px;
    background-color: #fff;
    z-index: 1;
    position: relative;
  }

  h1,
  h2,
  h3,
  p {
    margin-bottom: 1em;
  }

  .back-link {
    background-color: #41e2ba;

    &:hover {
      .back-link-arrow {
        svg {
          animation: ArrowWrapAround 350ms cubic-bezier(0.215, 0.61, 0.355, 1);
        }
      }
    }
  }

  @keyframes ArrowWrapAround {
    0% {
      transform: translateX(0);
    }
    49% {
      transform: translateX(-100%);
    }
    50% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(0);
    }
  }
</style>
